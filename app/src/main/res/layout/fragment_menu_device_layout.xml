<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/second_theme_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_25"
        android:text="My Device"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_0_5"
        android:text="@string/string_mine_device"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_30"
                app:shape_endColor="#262D38"
                app:shape_radius="@dimen/dp_15"
                android:padding="@dimen/dp_15"
                app:shape_startColor="#343348">


                <LinearLayout
                    android:id="@+id/menuConnDeviceLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center|left"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_device_name"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/deviceDeviceNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_no_device"
                        android:textColor="#fffd6a4a"
                        android:textSize="@dimen/sp_25" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/menuBatteryTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_battery"
                        android:padding="@dimen/dp_0_5"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/secondMenuDeviceConnStateTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未连接"
                        android:padding="@dimen/dp_0_5"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>


            </com.hjq.shape.layout.ShapeLinearLayout>


            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/deviceNotifyTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/string_notify_switch"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                app:shape_endColor="#262D38"
                app:shape_radius="@dimen/dp_20"
                app:shape_solidPressedColor="#80262D38"
                app:shape_startColor="#343348" />


            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/menuScheduleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="手机日程同步"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                app:shape_endColor="#262D38"
                app:shape_radius="@dimen/dp_20"
                app:shape_startColor="#343348" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/deviceAboutTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/string_about_device"
                app:shape_solidPressedColor="#80262D38"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                app:shape_endColor="#262D38"
                app:shape_radius="@dimen/dp_20"
                app:shape_startColor="#343348" />

            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/menuDeviceRecyclerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/string_recycler"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                app:shape_endColor="#262D38"
                android:visibility="gone"
                app:shape_radius="@dimen/dp_20"
                app:shape_solidPressedColor="#80262D38"
                app:shape_startColor="#343348" />


            <com.hjq.shape.layout.ShapeConstraintLayout
                android:id="@+id/menuDeviceAboutAppLayout"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="15dp"
                app:shape_endColor="#262D38"
                app:shape_radius="@dimen/dp_20"
                app:shape_solidPressedColor="#80262D38"
                app:shape_startColor="#343348"
                android:paddingBottom="15dp"
                android:layout_height="wrap_content">

                <com.hjq.shape.view.ShapeTextView
                    android:id="@+id/aboutTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="@string/string_about_app"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"
                  />

                <TextView
                    android:id="@+id/menuDeviceAboutAppVersionTv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:gravity="right"
                    android:layout_marginStart="@dimen/dp_5"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintLeft_toRightOf="@+id/aboutTv"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/white"
                    android:text="v1.0"/>

            </com.hjq.shape.layout.ShapeConstraintLayout>



            <com.hjq.shape.view.ShapeTextView
                android:id="@+id/deviceUnBindTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/string_unbind"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                app:shape_radius="@dimen/dp_15"
                app:shape_solidPressedColor="#90FD6A4A"
                app:shape_solidColor="#FD6A4A" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>