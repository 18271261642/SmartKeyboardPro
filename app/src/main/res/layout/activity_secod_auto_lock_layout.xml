<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/second_theme_color"
    android:layout_height="match_parent">


    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:titleColor="@color/white"
        app:title="@string/string_auto_lock"
        app:lineVisible="false"
        app:leftIcon="@drawable/ic_white_left_back"/>


<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/autoLockRecyclerView"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_20"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    tools:listitem="@layout/item_second_auto_lock_layout"
    android:layout_height="wrap_content"/>


</LinearLayout>