<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shape_solidColor="@color/second_theme_color"
    app:shape_solidPressedColor="@color/second_theme_press_color"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/itemAlarmListTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:00"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



    <TextView
        android:id="@+id/itemAlarmListRepeatTv"
        android:layout_width="wrap_content"
        android:text="1111"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/itemAlarmListTimeTv"
        app:layout_constraintTop_toBottomOf="@id/itemAlarmListTimeTv"/>

    <CheckBox
        android:id="@+id/itemAlarmListCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/dp_10"
        android:button="@null"
        android:background="@drawable/switch_checked_layout"
        app:layout_constraintBottom_toBottomOf="parent"/>


</com.hjq.shape.layout.ShapeConstraintLayout>